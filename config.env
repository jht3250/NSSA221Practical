#!/bin/bash
#===============================================================================
# NSSA221 Lab 06 - Master Configuration File
# 
# INSTRUCTIONS:
# 1. Edit this file with YOUR specific values
# 2. Source this file before running other scripts:
#    source /path/to/config.env
# 3. Or copy values to individual scripts
#===============================================================================

#-------------------------------------------------------------------------------
# DOMAIN CONFIGURATION
#-------------------------------------------------------------------------------
export DOMAIN="yourid.com"              # YOUR RIT ID + .com (e.g., abc1234.com)
export NETBIOS_NAME="YOURID"            # Uppercase, no .com

#-------------------------------------------------------------------------------
# IP ADDRESSING (Adjust for your network)
#-------------------------------------------------------------------------------
export NETWORK_PREFIX="192.168.10"      # Your network prefix
export SUBNET_MASK="255.255.255.0"
export DEFAULT_GATEWAY="${NETWORK_PREFIX}.254"
export DNS_SERVER="${NETWORK_PREFIX}.2"  # Usually your DC

#-------------------------------------------------------------------------------
# SERVER HOSTNAMES AND IPs
#-------------------------------------------------------------------------------
# Domain Controller / DNS Server
export DC_HOSTNAME="dc01"
export DC_IP="${NETWORK_PREFIX}.2"

# Web Server (Rocky Linux)
export WEB_SERVER_HOSTNAME="web01"
export WEB_SERVER_IP="${NETWORK_PREFIX}.10"

# Mail Server (Windows Server 2022)
export MAIL_SERVER_HOSTNAME="mail01"
export MAIL_SERVER_IP="${NETWORK_PREFIX}.11"

# Central Log Server (Rocky Linux)
export LOG_SERVER_HOSTNAME="log01"
export LOG_SERVER_IP="${NETWORK_PREFIX}.12"

# Linux Client (Rocky Linux)
export LINUX_CLIENT_HOSTNAME="rocky01"
export LINUX_CLIENT_IP="${NETWORK_PREFIX}.20"

# Windows Client
export WIN_CLIENT_HOSTNAME="win10"
export WIN_CLIENT_IP="${NETWORK_PREFIX}.21"

#-------------------------------------------------------------------------------
# VIRTUAL HOSTS CONFIGURATION
#-------------------------------------------------------------------------------
export VHOST1_PREFIX="starlord"
export VHOST2_PREFIX="gamora"
export VHOSTS_BASE_DIR="/www/virtualhosts"

#-------------------------------------------------------------------------------
# SSL/TLS CERTIFICATE CONFIGURATION
#-------------------------------------------------------------------------------
export CERT_COUNTRY="US"
export CERT_STATE="New York"
export CERT_LOCALITY="Rochester"
export CERT_ORG="RIT"
export CERT_OU="NSSA221"
export CERT_EMAIL="student@rit.edu"
export KEY_PASSPHRASE="nssa221lab06"    # CHANGE THIS!

#-------------------------------------------------------------------------------
# EMAIL CONFIGURATION
#-------------------------------------------------------------------------------
export EMAIL_USER1="starlord"
export EMAIL_USER2="gamora"
export EMAIL_PASSWORD="Password123!"     # CHANGE THIS!

#-------------------------------------------------------------------------------
# DERIVED VARIABLES (Don't edit these)
#-------------------------------------------------------------------------------
export WEB_SERVER_FQDN="${WEB_SERVER_HOSTNAME}.${DOMAIN}"
export MAIL_SERVER_FQDN="${MAIL_SERVER_HOSTNAME}.${DOMAIN}"
export LOG_SERVER_FQDN="${LOG_SERVER_HOSTNAME}.${DOMAIN}"
export VHOST1_FQDN="${VHOST1_PREFIX}.${DOMAIN}"
export VHOST2_FQDN="${VHOST2_PREFIX}.${DOMAIN}"
export DEFAULT_SITE_FQDN="www.${DOMAIN}"

#-------------------------------------------------------------------------------
# Display current configuration
#-------------------------------------------------------------------------------
echo "=========================================="
echo "NSSA221 Lab 06 Configuration Loaded"
echo "=========================================="
echo ""
echo "Domain: ${DOMAIN}"
echo "Network: ${NETWORK_PREFIX}.0/24"
echo ""
echo "Servers:"
echo "  DC/DNS:     ${DC_HOSTNAME} (${DC_IP})"
echo "  Web Server: ${WEB_SERVER_HOSTNAME} (${WEB_SERVER_IP})"
echo "  Mail Server: ${MAIL_SERVER_HOSTNAME} (${MAIL_SERVER_IP})"
echo "  Log Server: ${LOG_SERVER_HOSTNAME} (${LOG_SERVER_IP})"
echo ""
echo "Virtual Hosts:"
echo "  Default: ${DEFAULT_SITE_FQDN}"
echo "  VHost 1: ${VHOST1_FQDN}"
echo "  VHost 2: ${VHOST2_FQDN}"
echo ""
